@model List<FormTemplateViewModel>

@{
    ViewData["Title"] = "Manage Form Templates";
}

<h1>@ViewData["Title"]</h1>

<div class="mb-4">
    <a href="@Url.Action("Create", "Admin")" class="btn btn-success">Create New Template</a>
</div>

<!-- Table to display form templates -->
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var template in Model)
        {
            <tr>
                <td>@template.Name</td>
                <td>@template.Description</td>
                <td>
                    @if (template.IsBaseTemplate)
                    {
                        <span class="badge bg-primary">Base Template</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Custom Template</span>
                    }
                </td>
                <td>
                    @if (!template.IsBaseTemplate)
                    {
                        <a href="@Url.Action("EditTemplate", "Admin", new { id = template.TemplateId })" class="btn btn-primary btn-sm">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                    }
                    <a href="@Url.Action("ViewTemplate", "Admin", new { id = template.TemplateId })" class="btn btn-info btn-sm">
                        <i class="bi bi-eye"></i> View
                    </a>
                    @if (!template.IsBaseTemplate)
                    {
                        <button class="btn btn-danger btn-sm" onclick="confirmDelete(@template.TemplateId)">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        function confirmDelete(templateId) {
            if (confirm('Are you sure you want to delete this template? This action cannot be undone.')) {
                window.location.href = '@Url.Action("DeleteTemplate", "Admin")?id=' + templateId;
            }
        }
    </script>
}
